<h1>Invoice</h1>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Invoice_number</th>
      <th scope="col">Client ID</th>
      <th scope="col">Client Name</th>
      <th scope="col">Invoice Total</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  
  <tbody>
    <tr>
      <th scope="row"><a href= "/invoices/<%=@invoice.id%>/edit"> <%= @invoice.invoice_number %></a></th>
      <td><%= @invoice.client_id %></td>
      <td><%= @invoice.client.name %></td> 
      <td><%= @invoice.invoices_total %></td>
      <td><%= @invoice.status %></td>
    </tr>
  </tbody>
   
</table>
<div class = "buttons">
<%= button_to "Edit", edit_invoice_path, class: "btn btn-large btn-primary", method: :get  %>

<%= button_to "Email To Client", invoice_send_invoice_mail_path(@invoice.id), method: :post, class: "btn btn-large btn-primary" %>

<%= button_to "ViewInvoice", view_invoice_path(:uuid => @invoice.uuid), method: :get, class: "btn btn-large btn-primary" %>


<%= button_to "Delete", { :action => "destroy" }, { class: "btn btn-large btn-primary", :method => :delete}%>
</div>