<%= form_with model: @invoice do |form|%>
<div class="form-group row" > 
      <div class="col">
         <%= form.label :client_name , "Client: "%>
         <%= form.select :client_id, Client.all.collect{|client| [client.name, client.id ]} %>
        </div>
        
  </div>  
<div class="form-group row" > 
      <div class="col">
        <%= form.label :invoice_item , "Invoice Item: " %>
        <%= form.text_field :invoice_item %>
      </div>
      <div class="col">
        <%= form.label :expence_date, "Expence Date:" %>
        <%= form.text_field :expence_date %>
      </div>
    </div>
<div class="form-group row" > 
      <div class="col">
         <%= form.label :price, "Price/item:" %>
        <%= form.text_field :price %>
        </div>
        <div class="col">
        <%= form.label :quantity , "Quantity: " %>
        <%= form.text_field :quantity %>
       </div>
  </div>  
      <div>
      <%= form.submit "Submit", class: "btn btn-primary" %>
      </div>
 
  <% end %>  <br>
  