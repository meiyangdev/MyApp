<div class="form-row" >
        <div class="col" >
          <%= item.label :invoice_item, "Invoice Item: " %>
          <%= item.text_field :invoice_item %>
        </div>
        <div class="col" >
          <%= item.label :price, "Price/item: " %>
          <%= item.number_field :price, min: 0.00, step: 0.001 %>
        </div>
        <div class="col" >
          <%= item.label :quantity , "Quantity: " %>
          <%= item.text_field :quantity, min: 0%>
        </div>
</div>

